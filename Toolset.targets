<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<!-- Импорт файлов перед основной конфигурацией (если существуют) -->
	<Import
	  Project="$(VCTargetsPath)\Platforms\$(Platform)\PlatformToolsets\WindowsKernelModeDriver10.0\ImportBefore\*.targets"
	  Condition="Exists('$(VCTargetsPath)\Platforms\$(Platform)\PlatformToolsets\WindowsKernelModeDriver10.0\ImportBefore')" />

	<!-- Определение путей к toolset‑файлам для разных версий Visual Studio -->
	<PropertyGroup>
		<V142TargetsFile>$(VCTargetsPath)\Platforms\$(Platform)\PlatformToolsets\v142\Toolset.targets</V142TargetsFile>
		<V143TargetsFile>$(VCTargetsPath)\Platforms\$(Platform)\PlatformToolsets\v143\Toolset.targets</V143TargetsFile>
	</PropertyGroup>

	<!-- Импорт общих целевых настроек драйвера Windows (если файл существует) -->
	<Import
	  Project="$(WDKContentRoot)\build\$(WDKBuildFolder)\WindowsDriver.common.targets"
	  Condition="Exists('$(WDKContentRoot)\build\$(WDKBuildFolder)\WindowsDriver.common.targets')" />

	<!-- Импорт toolset‑файла: сначала пытаемся v143, затем fallback на v142 -->
	<Import
	  Project="$(V143TargetsFile)"
	  Condition="Exists('$(V143TargetsFile)')" />
	<Import
	  Project="$(V142TargetsFile)"
	  Condition="!Exists('$(V143TargetsFile)')" />

	<!-- Импорт файлов после основной конфигурации (если существуют) -->
	<Import
	  Project="$(VCTargetsPath)\Platforms\$(Platform)\PlatformToolsets\WindowsKernelModeDriver10.0\ImportAfter\*.targets"
	  Condition="Exists('$(VCTargetsPath)\Platforms\$(Platform)\PlatformToolsets\WindowsKernelModeDriver10.0\ImportAfter')" />
</Project>
